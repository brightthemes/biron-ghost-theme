<footer class="footer">
  <div class="container">
    <div class="columns">
      <div class="column is-4">
        <p class="footer-link-title has-text-weight-bold">{{t "Navigation"}}</p>
        {{navigation}}
      </div>
      <div class="column is-4">
        <p class="footer-link-title has-text-weight-bold">{{t "Follow Us"}}</p>
        {{> social-media}}
      </div>
      <div class="column is-4">
        <p class="footer-link-title has-text-weight-bold">{{t "Subscribe"}}</p>
        <p class="footer-text">{{t "Get the latest posts delivered right to your inbox" }}</p>
        <form class="subscribe-form" data-members-form="subscribe">
          <input class="input is-rounded" aria-labelledby="footer-subscribe" data-members-email type="email" placeholder="email@example.com" required/>
          <button class="button is-primary is-rounded has-text-weight-bold" type="submit" title="{{t "Subscribe"}}" aria-label="{{t "Subscribe"}}">
            {{t "Subscribe"}}
          </button>
        </form>
      </div>
    </div>
    <hr>
    <div class="footer-bottom has-text-centered">
      &copy; {{date format="YYYY"}} <a href="{{@site.url}}">{{@site.title}}</a>.
      Published with <a href="https://ghost.org">Ghost</a> & <a href="https://bironthemes.com/themes/biron-ghost/">Biron</a>.
    </div>
  </div>
</footer>
